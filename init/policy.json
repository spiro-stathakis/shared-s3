{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowReadOnlyForSpecificUser",
            "Effect": "Allow",
            "Principal": {
                "AWS": ["arn:aws:iam:::user/readonly-user"]
            },
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::shared-data-bucket",
                "arn:aws:s3:::shared-data-bucket/*"
            ]
        }
    ]
}
